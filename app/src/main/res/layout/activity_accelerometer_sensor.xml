<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Accelerometer_Sensor">

    <View
        android:id="@+id/line_id_x"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_marginStart="53dp"

        android:background="#c0c0c0"
        android:rotation="90"
        app:layout_constraintBottom_toTopOf="@+id/accelerometerTextValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.319" />

    <View
        android:id="@+id/line_id_y"
        android:layout_width="100dp"
        android:layout_height="2dp"

        android:layout_marginStart="50dp"
        android:background="#c0c0c0"
        android:rotation="0"
        app:layout_constraintBottom_toTopOf="@+id/accelerometerTextValue"
        app:layout_constraintStart_toStartOf="@+id/line_id_x"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.454" />

    <View
        android:id="@+id/line_id_z"
        android:layout_width="100dp"
        android:layout_height="2dp"

        android:background="#c0c0c0"
        android:rotation="-50"
        app:layout_constraintBottom_toTopOf="@+id/accelerometerTextValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_id_x"
        app:layout_constraintVertical_bias="0.351" />

    <TextView
        android:id="@+id/accelerometerTextValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accelerometer Value"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>